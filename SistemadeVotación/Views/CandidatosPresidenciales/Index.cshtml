@model IEnumerable<SistemadeVotación.Models.CandidatosPresidenciale>

@{
    ViewData["Title"] = "Index";
}

<h1>Candidatos Presidenciales</h1>
@if (TempData["EstaActivo"] != null)
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>
}


<table class="table">
    <thead>
        <tr class="text-center">
            <th>
                <span>Nombre Completo</span>
            </th>
            <th>
                <span>No. DPI</span>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidad)
            </th>
            <th>
                <span>Departamento de Nacimiento</span>
            </th>
            <th>
                <span>Partido Politico</span>
            </th>
            <th>
                <span>Foto</span>
            </th>
            <th>
                <span>Fecha de Ingreso Partido</span>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoDpi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartamentoNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartidoPolitico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FotoUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngresoPartido)
            </td>
            <td>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
