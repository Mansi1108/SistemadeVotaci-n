@model SistemadeVotación.Models.Votosp

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Votosp</h4>
<hr />
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
} else
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdCandidato" class="control-label"></label>
                    <select asp-for="IdCandidato" class ="form-control" asp-items="ViewBag.IdCandidato"></select>
                </div>
                <div class="form-group">
                    <label asp-for="NoDpi" class="control-label"></label>
                    <input asp-for="NoDpi" class="form-control" />
                    <span asp-validation-for="NoDpi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
